{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "checkJs": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
        ],
        "downlevelIteration": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "CommonJs",
        "outDir": "./build",
        "paths": {
            "@enum": [
                "src/enum"
            ],
            "@enum/*": [
                "src/enum/*"
            ],
            "@interface": [
                "src/interface"
            ],
            "@interface/*": [
                "src/interface/*"
            ],
            "@type": [
                "src/type"
            ],
            "@type/*": [
                "src/type/*"
            ],
            "@feature": [
                "src/feature"
            ],
            "@feature/*": [
                "src/feature/*"
            ],
            "@shared": [
                "src/shared"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@src": [
                "src",
            ],
            "@src/*": [
                "src/*"
            ],
            "@res": [
                "res"
            ],
            "@res/*": [
                "res/*"
            ],
        },
        "resolveJsonModule": true,
        "rootDir": ".",
        "strict": true,
        "target": "ESNext"
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
}