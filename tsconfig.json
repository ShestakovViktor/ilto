{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "checkJs": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
        ],
        "downlevelIteration": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "CommonJs",
        "outDir": "./build",
        "paths": {
            "@core": [
                "src/core"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@ui": [
                "src/ui"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@type": [
                "src/type"
            ],
            "@type/*": [
                "src/type/*"
            ],
            "@enum": [
                "src/enum"
            ],
            "@enum/*": [
                "src/enum/*"
            ],
            "@style": [
                "src/style"
            ],
            "@style/*": [
                "src/style/*"
            ],
            "@src": [
                "src",
            ],
            "@src/*": [
                "src/*"
            ],
            "@public": [
                "public"
            ],
            "@public/*": [
                "public/*"
            ],
        },
        "resolveJsonModule": true,
        "rootDir": ".",
        "strict": true,
        "target": "ESNext"
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
}