{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "checkJs": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "paths": {
            "@src": [
                "src"
            ],
            "@src/*": [
                "src/*"
            ],
            "@scene": [
                "src/scene"
            ],
            "@scene/*": [
                "src/scene/*"
            ],
            "@core": [
                "src/core"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@ui": [
                "src/ui"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
        },
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES6"
    },
    "files": [
        "module.d.ts",
    ],
    "include": [
        "src/**/*.js",
    ],
    "exclude": [
        "node_modules"
    ],
}